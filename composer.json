{
    "name": "kba-team/cake2_app_version",
    "description": "CakePHP plugin to determine the current version of your application. The version is either taken from the commit.json of the deploy script or from the local clone of the git repository.",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Gregor J.",
            "email": "gregor-j@users.noreply.github.com",
            "role": "developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/kamilwylegala/cakephp2-php8"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "cakephp/cakephp": "dev-master as 2.10.24",
        "php": ">8.0, <8.4",
        "composer/installers": "^2.2",
        "kba-team/version": "^2.0"
    },
    "extra": {
        "installer-name": "AppVersion"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
